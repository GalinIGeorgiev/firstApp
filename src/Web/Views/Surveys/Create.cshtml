@using System.Linq
@model FirstApp.Services.ViewModels.Survey.CreateSurveyViewModel


@{
    ViewData["Title"] = "Create Survey";
}
<h1 class="text-center">Create Survey</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="View" method="post" id="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="surveyQuestion" class="control-label"></label>
                <input asp-for="surveyQuestion" class="form-control">
                <span asp-validation-for="surveyQuestion" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="options" class="control-label"></label>
                <input asp-for="options" class="form-control">
                <span asp-validation-for="options" class="text-danger"></span>
                
                <button id="addOptionBtn"  class="btn btn-primary">add</button>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


@using Remotion.Linq.Parsing.Structure.IntermediateModel
@model FirstApp.Services.ViewModels.Home.IndexArticleViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Champion Website</h1>
    <hr />
</div>

<div class="row justify-content-around">
    @foreach (var article in Model.Articles)
    {

        <div class="card w-25 mr-md-2 text-white bg-dark">
            <div class="card-body">
                <div class="justify-content-center"> <img src="@article.ImageUrl" width="256" height="128">  </div>


                <h5 class="card-title">@article.Category</h5>
                <p class="card-text">@article.Content</p>
                <h5 class="card-footer">@article.CreatedOn</h5>
            </div>
        </div>
    }
</div>



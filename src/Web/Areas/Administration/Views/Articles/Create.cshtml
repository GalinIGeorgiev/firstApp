@using FirstApp.Data.Models
@model FirstApp.Services.ViewModels.Articles.CreateArticleViewModel

@{
    ViewData["Title"] = "Create Article";
    var categories = ViewData["Categories"] as IEnumerable<SelectListItem>;
    var teams = ViewData["Teams"] as IEnumerable<SelectListItem>;
   
}
<h1 class="text-center">Create Article</h1>
<hr />

<div class="d-flex justify-content-around">
    <div class="col-md-6">
        <form asp-controller="Article" asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-primery"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" class="form-control" rows="10"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>

                <select asp-for="CategoryId" asp-items="categories" class="form-control">
                    <option value="">Избери категория</option>
                </select>
                
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamId" class="control-label"></label>

                <select asp-for="TeamId" asp-items="teams" class="form-control">
                    <option value="">Избери отбор</option>
                </select>
                
                <span asp-validation-for="TeamId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Images" class="control-label">Избери снимка</label>
                <input asp-for="Images" class="form-control-file" aria-label="Избери снимка" title="Избери снимка"/>
                <span asp-validation-for="Images" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Videos" class="control-label">Избери Видео</label>
                <input asp-for="Videos" class="form-control" title="Избери Видео" />
                <span asp-validation-for="Videos" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Create" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>



<div>
    <a asp-controller="Home" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
